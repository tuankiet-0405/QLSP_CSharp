@model List<THLTW.Models.CartItem>

<div class="modal-header">
    <h5 class="modal-title" id="cartModalLabel">Giỏ hàng của bạn</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    @if (Model == null || !Model.Any())
    {
        <p>Giỏ hàng của bạn đang trống.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" style="width: 50px; height: auto;" />
                            }
                        </td>
                        <td>@item.Price.ToString("N0") đ</td>
                        <td>
                            <input type="number" value="@item.Quantity" min="1" class="form-control form-control-sm quantity-input" data-product-id="@item.ProductId" style="width: 70px;" />
                        </td>
                        <td>@item.Total.ToString("N0") đ</td>
                        <td>
                            <button class="btn btn-danger btn-sm remove-from-cart-btn" data-product-id="@item.ProductId">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <h5>Tổng cộng: @Model.Sum(i => i.Total).ToString("N0") đ</h5>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    @if (Model != null && Model.Any())
    {
        <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary">Thanh toán</a>
    }
</div>
