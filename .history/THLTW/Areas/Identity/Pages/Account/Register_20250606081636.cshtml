@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng Ký";
}

@* Thêm CSS file vào trang này *@
@section Styles {
    <link rel="stylesheet" href="~/css/register.css" />
}

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <h1 class="register-title">@ViewData["Title"]</h1>
            <p class="register-subtitle">Tạo tài khoản mới</p>
        </div>
        
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="example@email.com" />
                <span asp-validation-for="Input.Email" class="field-validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                <input asp-for="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Input.Password" class="field-validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="Input.ConfirmPassword" class="field-validation-error"></span>
            </div>
            
            <button id="registerSubmit" type="submit" class="btn-register">Đăng Ký</button>
        </form>
        
        @* External logins section nếu cần *@
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="external-login-section">
                <hr />
                <p class="text-center">Hoặc đăng ký bằng:</p>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Đăng ký bằng @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
        
        <div class="login-link">
            <p class="text-center">
                Đã có tài khoản? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đăng nhập ngay</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}