                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Danh mục</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="aiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-chart-line"></i> AI Dashboard
                                </a>                                <ul class="dropdown-menu" aria-labelledby="aiDropdown">
                                    <li><a class="dropdown-item" asp-controller="AIDashboard" asp-action="Index">
                                        <i class="fas fa-tachometer-alt"></i> Tổng quan
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="AIDashboard" asp-action="UserAnalytics">
                                        <i class="fas fa-users"></i> Phân tích người dùng
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="AIDashboard" asp-action="ProductAnalytics">
                                        <i class="fas fa-box"></i> Phân tích sản phẩm
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="AIDashboard" asp-action="Recommendations">
                                        <i class="fas fa-magic"></i> Gợi ý AI
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="AIDashboard" asp-action="TrendingAI">
                                        <i class="fas fa-fire text-warning"></i> AI Trending
                                    </a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                        </li>                    </ul>                    
                    <ul class="navbar-nav">
                        @* <li class="nav-item">
                            <partial name="_LanguageSwitch" />
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" id="cartIconLink" data-bs-toggle="modal" data-bs-target="#cartModal">
                                <i class="fas fa-shopping-cart"></i> Giỏ hàng <span class="badge bg-danger" id="cartItemCount">0</span>
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @* Add a hidden form for AntiForgeryToken if not already present in a main form *@
            @if (Context.Request.Method != "POST" || !ViewContext.HttpContext.Request.HasFormContentType)
            {
                <form>
                    @Html.AntiForgeryToken()
                </form>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Dự án bán đồng hồ - Chủ sở hữu: Phan Lâm Tuấn Kiệt 
            | Email: tk04052k4@gmail.com 
            | Điện thoại: 0345-840-642
            | <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a>
            <div class="social-media-icons mt-2">
                <!-- Thêm biểu tượng mạng xã hội ở đây, ví dụ: -->
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Cart Modal -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="cartModalContent">
                <!-- Content will be loaded here by AJAX -->
            </div>
        </div>
    </div>

<script>
    $(document).ready(function () {
        function updateCartItemCount() {
            $.ajax({
                url: '@Url.Action("GetCartItemCount", "Cart")', // Action mới để lấy số lượng item
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        $('#cartItemCount').text(response.itemCount);
                    }
                },
                error: function () {
                    console.log("Không thể cập nhật số lượng giỏ hàng.");
                }
            });
        }

        updateCartItemCount(); // Cập nhật khi tải trang

        $('#cartIconLink').on('click', function (e) {
            e.preventDefault();
            $('#cartModalContent').html('<div class="modal-body"><p>Đang tải giỏ hàng...</p></div>'); // Show loading state
            $.ajax({
                url: '@Url.Action("Index", "Cart")',
                type: 'GET',
                success: function (response) {
                    $('#cartModalContent').html(response);
                },
                error: function () {
                    $('#cartModalContent').html('<div class="modal-body"><p>Lỗi khi tải giỏ hàng. Vui lòng thử lại.</p></div>');
                }
            });
        });

        // Delegated event for dynamically added quantity inputs
        $(document).on('change', '.quantity-input', function () {
            var productId = $(this).data('product-id');
            var quantity = $(this).val();
            $.ajax({
                url: '@Url.Action("UpdateQuantity", "Cart")',
                type: 'POST',
                data: { productId: productId, quantity: quantity },
                headers: {
                    RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() // For AntiForgeryToken
                },
                success: function (response) {
                    if (response.success) {
                        // Reload cart content to reflect changes
                        $('#cartIconLink').click(); 
                        $('#cartItemCount').text(response.itemCount);
                    }
                }
            });
        });

        // Delegated event for dynamically added remove buttons
        $(document).on('click', '.remove-from-cart-btn', function () {
            var productId = $(this).data('product-id');
            $.ajax({
                url: '@Url.Action("RemoveFromCart", "Cart")',
                type: 'POST',
                data: { productId: productId },
                headers: {
                    RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() // For AntiForgeryToken
                },
                success: function (response) {
                    if (response.success) {
                        // Reload cart content
                        $('#cartIconLink').click(); 
                        $('#cartItemCount').text(response.itemCount);
                    }
                }
            });
        });
    });

    // Global function to be called by AddToCart button clicks from Product/Index.cshtml
    function handleAddToCartSuccess(itemCount) {
        $('#cartItemCount').text(itemCount);
        // Optionally, provide some visual feedback like a toast message
        // alert('Sản phẩm đã được thêm vào giỏ hàng!');
    }

    // Hàm cập nhật số lượng item trong giỏ hàng từ các trang khác (nếu cần)
    function updateCartCountDisplay(itemCount) {
        $('#cartItemCount').text(itemCount);
    }
</script>
</body>
</html>
